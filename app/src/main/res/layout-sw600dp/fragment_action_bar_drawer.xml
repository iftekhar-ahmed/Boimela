<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@android:color/white"
    android:paddingLeft="24dp"
    android:paddingStart="24dp"
    android:paddingRight="24dp"
    android:paddingEnd="24dp"
    android:paddingTop="8dp"
    tools:context="org.melayjaire.boimela.ui.ActionBarDrawerFragment">

    <org.melayjaire.boimela.view.BanglaTextView
        android:layout_width="match_parent"
        android:layout_height="48dp"
        android:textSize="14sp"
        android:textColor="@color/white_87"
        app:font="@string/font_solaimanlipi"
        app:banglaText="@string/category" />

    <org.melayjaire.boimela.view.BanglaTextView
        android:layout_width="match_parent"
        android:layout_height="48dp"
        android:textSize="14sp"
        android:textColor="@color/white_87"
        app:font="@string/font_solaimanlipi"
        app:banglaText="@string/new_book" />

    <org.melayjaire.boimela.view.BanglaTextView
        android:layout_width="match_parent"
        android:layout_height="48dp"
        android:textSize="14sp"
        android:textColor="@color/white_87"
        app:font="@string/font_solaimanlipi"
        app:banglaText="@string/favorite_books" />

</LinearLayout>
