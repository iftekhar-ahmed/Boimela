<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@android:color/white"
    android:paddingTop="8dp"
    tools:context="org.melayjaire.boimela.ui.ActionBarDrawerFragment">

    <LinearLayout
        android:id="@+id/drawer_item_all_books"
        style="@style/DrawerItem">

        <ImageView
            style="@style/DrawerItem_Icon"
            android:src="@drawable/ic_all_books"
            android:scaleType="fitXY"
            android:contentDescription="@string/book_cover" />

        <org.melayjaire.boimela.view.BanglaTextView
            style="@style/DrawerItem_Text"
            app:font="@string/font_solaimanlipi"
            app:banglaText="@string/all_books" />

        <org.melayjaire.boimela.view.BanglaTextView
            android:id="@+id/textView_counter_all_books"
            style="@style/DrawerItem_Counter"
            app:font="@string/font_solaimanlipi" />
    </LinearLayout>

    <LinearLayout
        android:id="@+id/drawer_item_ranked_books"
        style="@style/DrawerItem">

        <ImageView
            style="@style/DrawerItem_Icon"
            android:src="@drawable/ic_ranked_book"
            android:scaleType="fitXY"
            android:contentDescription="@string/book_cover" />

        <org.melayjaire.boimela.view.BanglaTextView
            style="@style/DrawerItem_Text"
            app:font="@string/font_solaimanlipi"
            app:banglaText="@string/ranked_book" />

        <org.melayjaire.boimela.view.BanglaTextView
            android:id="@+id/textView_counter_ranked_books"
            style="@style/DrawerItem_Counter"
            app:font="@string/font_solaimanlipi" />
    </LinearLayout>

    <LinearLayout
        android:id="@+id/drawer_item_favorite_books"
        style="@style/DrawerItem">

        <ImageView
            style="@style/DrawerItem_Icon"
            android:src="@drawable/ic_star_full"
            android:scaleType="fitXY"
            android:contentDescription="@string/book_cover" />

        <org.melayjaire.boimela.view.BanglaTextView
            style="@style/DrawerItem_Text"
            app:font="@string/font_solaimanlipi"
            app:banglaText="@string/favorite_books" />

        <org.melayjaire.boimela.view.BanglaTextView
            android:id="@+id/textView_counter_favorite_books"
            style="@style/DrawerItem_Counter"
            app:font="@string/font_solaimanlipi" />
    </LinearLayout>
</LinearLayout>
